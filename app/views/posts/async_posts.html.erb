<% if @virtual_posts.size > 0 %>
  <%= react_component("standard-post-list", { posts: @virtual_posts.map(&:render_camelized), peerd: @permitted_index_params[:peer_id] }) %>
<% else %>
  <div class="h-screen bg-gray-300 w-full w-1/3 mx-auto p-3">
    <div class="text-gray-600">
      Sorry no posts found
    </div>
  </div>
<% end %>
