<div class="flex py-4">
  <%= form_with url: sessions_register_path, class: "mx-auto w-full md:w-1/3", id: "register-form" do |f| %>
    <div data-controller="forms--password-preview">
      <%= f.label :installation_password %>
      <span class="input-icon" data-action="click->forms--password-preview#toggle">ðŸ‘€</span>
      <%= f.password_field :installation_password, required: true, data: { "forms--password-preview-target": "input" }, class: "with-icon" %>
    </div>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name, required: true %>
    </div>
    <div>
      <%= f.label :nickname %>
      <span class="input-icon">@</span>
      <%= f.text_field :nickname, required: true, class: "with-icon" %>
    </div>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email, required: true %>
    </div>

    <%= f.submit "Register", class: "w-full mt-4" %>
  <% end %>
</div>