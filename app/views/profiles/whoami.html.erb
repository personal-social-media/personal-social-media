<div class="text-center text-3xl font-bold no-print">
  Who Am I
</div>

<%= content_tag "div", class: "md:w-1/3 w-full px-2 pt-2 mx-auto",
                data: { controller: "communication--element-to-picture", file_name: @shared_image_file_name } do %>
  <div data-communication--element-to-picture-target="imageContent" class="bg-white">
    <div class="flex justify-center">
      <div class="mr-1">Name</div>
      <div class="ml-1"><%= @profile.name %></div>
    </div>
    <div class="flex justify-center">
      <div class="mr-1">Nickname</div>
      <div class="ml-1"><%= @profile.nickname %></div>
    </div>
    <div class="flex justify-center">
      <div class="mr-1">Domain Name</div>
      <div class="ml-1"><%= @profile.domain_name %></div>
    </div>

    <div class="mt-4">
      <%= content_tag "img", "", src: PeersService::Gravatar.new(email: @profile.email).url(size: 240), class: "rounded-full mx-auto" %>
    </div>
    <div>
      <%= content_tag "canvas", "", class: "mx-auto", data: { qr_payload: @qr_code, controller: "communication--qr-code" } %>
    </div>
  </div>
  <div>
    <button data-action="click->communication--element-to-picture#download" class="no-print w-full mx-auto">
      Download
    </button>
  </div>
<% end %>
